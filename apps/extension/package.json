{
  "name": "@triad/extension",
  "version": "0.0.1",
  "description": "Triad Chrome Extension",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
